.loading {
  display: flex;
  height: 40px;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  font-size: 12px;
  color: #333;
}
page {
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.home {
  font-size: 12px;
}
.home .swiper {
  width: 100%;
  height: 80rpx;
  position: fixed;
  top: 0;
  z-index: 1000;
}
.home .swiper .swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #333;
  color: #fff;
}
.home .list {
  flex: auto;
  height: 100%;
  z-index: 100;
}
.navigator-hover {
  background-color: rgba(0, 0, 0, 0.1);
}
.cell {
  width: auto;
  padding: 30rpx 10px;
  border-bottom: 1px solid #ddd;
  color: #333;
}
.detail .info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.detail .info .left {
  display: flex;
  align-items: center;
}
.detail .info .image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.login {
  background-color: #f6f6f6;
  height: 100%;
}
.login .title {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 50rpx;
  border-bottom: none;
}
.login .section {
  background-color: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
  text-indent: 10rpx;
}
.login .section input {
  width: 100%;
  padding: 0 10px;
}
.login .btn {
  width: 90%;
  margin: 100px auto;
}
