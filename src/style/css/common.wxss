.loading {
  display: flex;
  height: 40px;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  font-size: 12px;
  color: #333;
}
page {
  height: 100%;
}
.home {
  font-size: 12px;
  height: 100%;
  background-color: #eee;
}
.home .list {
  height: 100%;
  z-index: 100;
}
.home .list .navbar {
  display: flex;
  white-space: nowrap;
  width: 100%;
  background-color: #fff;
}
.home .list .navbar .navbar_item {
  width: 200rpx;
  height: 40px;
  color: #f70a13;
  display: inline-block;
  text-align: center;
  line-height: 40px;
  box-sizing: border-box;
}
.home .list .navbar .active {
  border-bottom: 2px solid #f70a13;
}
.home .list .topics {
  background-color: #fff;
  margin-top: 10px;
}
.navigator-hover {
  background-color: rgba(0, 0, 0, 0.1);
}
.navbar_hover {
  background-color: rgba(0, 0, 0, 0.1);
}
.cell {
  width: auto;
  padding: 30rpx 10px;
  border-bottom: 1px solid #ddd;
  color: #333;
}
.detail .info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.detail .info .left {
  display: flex;
  align-items: center;
}
.detail .info .image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 20rpx;
}
.login {
  background-color: #f6f6f6;
  height: 100%;
}
.login .title {
  text-align: center;
  margin-bottom: 50rpx;
  border-bottom: none;
}
.login .section {
  background-color: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
  text-indent: 10rpx;
}
.login .section input {
  width: 100%;
  padding: 0 10px;
}
.login .btn {
  width: 90%;
  margin: 100px auto;
}
.login .userinfo .top {
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
}
.login .userinfo .top .avator {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.login .content {
  margin-top: 10px;
  color: #333;
  font-size: 12px;
  background-color: #fff;
}
