<view class="login">
  <block wx:if="{{islogin}}">
    <view class="cell title">
      <text>{{title}}</text>
    </view>
    <view class="section">
      <input
        class="input"
        placeholder="请输入token"
        cursor-spacing="20"
        bindinput="inputhandle"/>
    </view>
    <view class="btn">
      <button
        type="default"
        size="{{defaultSize}}"
        loading="{{loading}}"
        plain="{{plain}}"
        disabled="{{disabled}}"
        bindtap="tabhandle"
        hover-class="other-button-hover">
        确认
      </button>
    </view>
  </block>
  <block wx:else>
    <!-- 登录成功之后渲染 -->
    <view class="top">
      hello world
      <image
        class="image"
        src="{{content.author.avatar_url}}"
        mode="widthFix">
      </image>
    </view>
  </block>
</view>
